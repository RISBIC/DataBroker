<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.DEFAULT_SUFFIX</param-name>
        <param-value>.xhtml</param-value>
    </context-param>
 
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>DataBrokerWebPortalRealm</realm-name>
        <form-login-config>
            <form-login-page>/signin.html</form-login-page>
            <form-error-page>/signin_error.html</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>guest</role-name>
    </security-role>

    <security-role>
        <role-name>user</role-name>
    </security-role>

    <security-role>
        <role-name>admin</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Unsecure pages</web-resource-name>
            <url-pattern>/index.html</url-pattern>
            <url-pattern>/signin.html</url-pattern>
            <url-pattern>/signin_error.html</url-pattern>
            <url-pattern>/site_style.css</url-pattern>
            <url-pattern>/home_style.css</url-pattern>
            <url-pattern>/signin_style.css</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>The dataview pages</web-resource-name>
            <url-pattern>/dataviews/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>guest</role-name>
            <role-name>user</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>The dataflow pages</web-resource-name>
            <url-pattern>/dataflows/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>The databrokers admin pages</web-resource-name>
            <url-pattern>/databrokers/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/errors/session_expired.html</location>
    </error-page>

    <error-page>
        <error-code>401</error-code>  
        <location>/errors/unauthorized.html</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>  
        <location>/errors/not_found.html</location>
    </error-page>
</web-app>
