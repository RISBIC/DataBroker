<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.arjuna.databroker</groupId>
        <artifactId>system</artifactId>
        <version>1.0.0p1m2l</version>
    </parent>

    <artifactId>server-ear</artifactId>

    <packaging>ear</packaging>

    <name>Server EAR</name>

    <dependencies>
        <dependency>
            <groupId>com.arjuna.databroker</groupId>
            <artifactId>data-common</artifactId>
            <version>1.0.0p1m2l</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.arjuna.databroker</groupId>
            <artifactId>data-common-jee</artifactId>
            <version>1.0.0p1m2l</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>com.arjuna.databroker</groupId>
            <artifactId>metadata-common</artifactId>
            <version>1.0.0p1m2l</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.arjuna.databroker</groupId>
            <artifactId>metadata-rdf</artifactId>
            <version>1.0.0p1m2l</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.arjuna.databroker</groupId>
            <artifactId>control-common</artifactId>
            <version>1.0.0p1m2l</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.arjuna.databroker</groupId>
            <artifactId>metadata-store</artifactId>
            <version>1.0.0p1m2l</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>com.arjuna.databroker</groupId>
            <artifactId>control-core</artifactId>
            <version>1.0.0p1m2l</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>com.arjuna.databroker</groupId>
            <artifactId>metadata-ws</artifactId>
            <version>1.0.0p1m2l</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.arjuna.databroker</groupId>
            <artifactId>control-ws</artifactId>
            <version>1.0.0p1m2l</version>
            <type>war</type>
        </dependency>
    </dependencies>

    <build>
        <finalName>databroker</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <modules>
                        <jarModule>
                            <groupId>com.arjuna.databroker</groupId>
                            <artifactId>data-common</artifactId>
                            <bundleFileName>data-common.jar</bundleFileName>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>com.arjuna.databroker</groupId>
                            <artifactId>metadata-common</artifactId>
                            <bundleFileName>metadata-common.jar</bundleFileName>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>com.arjuna.databroker</groupId>
                            <artifactId>control-common</artifactId>
                            <bundleFileName>control-common.jar</bundleFileName>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>com.arjuna.databroker</groupId>
                            <artifactId>metadata-rdf</artifactId>
                            <bundleFileName>metadata-rdf.jar</bundleFileName>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <ejbModule>
                            <groupId>com.arjuna.databroker</groupId>
                            <artifactId>data-common-jee</artifactId>
                            <bundleFileName>data-common-jee.jar</bundleFileName>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.arjuna.databroker</groupId>
                            <artifactId>metadata-store</artifactId>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.arjuna.databroker</groupId>
                            <artifactId>control-core</artifactId>
                            <bundleFileName>control-core.jar</bundleFileName>
                        </ejbModule>
                        <webModule>
                            <groupId>com.arjuna.databroker</groupId>
                            <artifactId>metadata-ws</artifactId>
                            <contextRoot>metadata</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>com.arjuna.databroker</groupId>
                            <artifactId>control-ws</artifactId>
                            <contextRoot>control</contextRoot>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>jbossas</id>
    
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jboss.as.plugins</groupId>
                        <artifactId>jboss-as-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>install</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                       </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>wildfly</id>
    
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.wildfly.plugins</groupId>
                        <artifactId>wildfly-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>install</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                       </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>openshift</id>
    
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-ear-plugin</artifactId>
                        <configuration>
                            <outputDirectory>${deployments.dir}</outputDirectory>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
